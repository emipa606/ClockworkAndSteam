<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>Royalty</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- Royalty clothes -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_MasqueradeMask"]/apparel/tags</xpath>
          <value>
            <li>Royal</li>
            <li>RoyalTier5</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_ArtificerMask"]/apparel/tags</xpath>
          <value>
            <li>Royal</li>
            <li>RoyalTier2</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_Tailcoat"]/apparel/tags</xpath>
          <value>
            <li>Royal</li>
            <li>RoyalTier2</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Apparel_FlowerHat"]/apparel/tags</xpath>
          <value>
            <li>Royal</li>
            <li>RoyalTier2</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>